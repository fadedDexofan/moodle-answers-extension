{
    "manifest_version": 2,
    "name": "Moodle helper",
    "version": "1.0",
    "description": "Helps to pass moodle quizzes",

    "default_locale": "en",

    "permissions": [
        "cookies",
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "browser-polyfill.min.js",
                "contentScript.js"
            ]
        }
    ]

}
